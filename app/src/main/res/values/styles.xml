<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppStart.Transparent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="AppStart.SplashStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_splash_background</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
    </style>

    <style name="Mammut.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--  Edge to edge theming  -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/use_light_navigation</item>

        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:fontFamily">@font/varela_round_regular</item>
    </style>

</resources>
